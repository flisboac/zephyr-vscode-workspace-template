root = true

[*]
charset = utf-8
indent_size = 2
indent_style = space
trim_trailing_whitespace = true
end_of_line = lf
insert_final_newline = true

[Kconfig{,.*}]
indent_style = tab
indent_size = 2

[Makefile{,.*}]
indent_size = 4
indent_style = tab

[*.{mak,make,Makefile,overlay,dts}]
indent_size = 4
indent_style = tab

[*.{c,h,cpp,hpp,ino}]
indent_size = 4

[*.sh]
indent_size = 4

[CMakeLists.txt]
indent_size = 4
